{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["/node_modules/@types", "/src/types"],
    "types": [
      "node",
      "detox",
      "@types/jest",
    ],
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "e2e/**/*.js",
  ],
  "include": ["./src/**/*", "./types/*"]
}
